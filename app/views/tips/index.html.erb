<div class="container">
  <div class="row clearfix">
    <div class="col-md-3 column">
      <div class="list-group">
         <a href="#" class="list-group-item active">Daily Tips</a>
        <!-- <div class="list-group-item">
          List header
        </div> -->
        <% @tips.each do |tip| %>
          <div class="list-group-item">
            <h4 class="list-group-item-heading">
              <a href="#"><%= tip.title %></a>
            </h4>
          </div>
        <% end %>

      </div>
    </div>
    <div class="col-md-5 column">
      <form role="form">
        <div class="form-group">
           <label for="name">Title</label><input type="text" class="form-control" id="name">
        </div>
        <div class="form-group">
           <label for="text">Text</label><textarea id="some-textarea" class='wysihtml5 form-control' placeholder="Enter text ..."></textarea>
        </div>

        <div class="form-group">
           <label for="datepicker">Date</label><input type="date" class="form-control" id="datepicker">
        </div>
        
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
    <div class="col-md-4 column">
      Preview Section
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });

  })
</script>

<h1>Listing tips</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tips.each do |tip| %>
  <tr>
    <td><%= tip.title %></td>
    <td><%= tip.text %></td>
    <td><%= tip.date %></td>
    <td><%= link_to 'Show', tip_path(tip.id) %></td>
    <td><%= link_to 'Edit', edit_tip_path(tip.id) %></td>
    <td><%= link_to 'Destroy', tip_path(tip.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Tip', new_tip_path %>
